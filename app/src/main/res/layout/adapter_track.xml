<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    >



    <ImageView
        android:id="@+id/imageView_display_track_album_art"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginTop="2dp"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/default_album_art_track" />

    <TextView
        android:id="@+id/textView_display_track_song_name"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="middle"
        android:text="TextView"
        android:layout_alignTop="@+id/imageView_display_track_album_art"
        android:layout_toEndOf="@+id/imageView_display_track_album_art"
        android:layout_marginTop="8dp"
        android:textColor="@color/defaultTextColor"
        android:layout_marginRight="18dp"
        />

    <TextView
        android:id="@+id/textView_display_track_artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="TextView"
        android:layout_marginLeft="5dp"
        android:textSize="13sp"
        android:clickable="true"
        android:ellipsize="middle"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView_display_track_song_name"
        android:layout_toEndOf="@+id/imageView_display_track_album_art"
        android:textColor="@color/defaultTextColor"
        android:layout_marginRight="18dp"
        />

    <TextView
        android:id="@+id/textView_display_track_ripple_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignBottom="@+id/imageView_display_track_album_art"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:background="@drawable/custom_list_background_ripple_v21"
        android:layout_alignTop="@+id/imageView_display_track_album_art" />


</RelativeLayout>
