<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center"
    android:weightSum="3"

    >


    <ImageView
        android:id="@+id/imageView_notification_album_art_small"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight=".1"
        android:src="@drawable/default_album_art_track" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
      >

        <TextView
            android:id="@+id/textView_notification_app_name_small"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.4"
            android:text="@string/app_name"
            android:gravity="top"
            android:textColor="@color/highLightColor"
            android:textSize="12sp" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.6"
    >

    <TextView
        android:id="@+id/textView_notification_song_name_small"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="top"
        android:fadingEdge="horizontal"
        android:text="Song Name"
        android:textColor="@color/black_color"
        android:textSize="15sp" >
        <requestFocus/>

    </TextView>

</RelativeLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.9"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="#00000000"
        >

        <ImageButton
            android:id="@+id/imageView_notification_prev_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/notification_prev"
            android:background="@drawable/custom_small_player_ripple_v21"
            android:clickable="true"
           />

        <ImageButton
            android:id="@+id/imageView_notification_play_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:background="@drawable/custom_small_player_ripple_v21"
            android:clickable="true"
            app:srcCompat="@drawable/notification_play" />

        <ImageButton
            android:id="@+id/imageView_notification_next_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_small_player_ripple_v21"
            android:clickable="true"
            android:src="@drawable/notification_next" />

        <ImageButton
            android:id="@+id/imageView_notification_close_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:background="@drawable/custom_small_player_ripple_v21"
            android:clickable="true"
            android:src="@drawable/notification_close" />
    </LinearLayout>


</LinearLayout>