<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="#fff"
    android:orientation="horizontal"

    >

    <ImageView
        android:id="@+id/imageView_notification_album_art"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.2"

        app:srcCompat="@drawable/default_album_art_track" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/heck1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3">

            <TextView
                android:id="@+id/textView_notification_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:text="@string/app_name"
                android:textColor="@color/highLightColor"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/imageView_notification_close"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:layout_alignParentTop="true"
                android:layout_gravity="bottom"
                android:background="@drawable/custom_small_player_ripple_v21"

                android:clickable="true"
                app:srcCompat="@drawable/notification_close" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/heck2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"

                >

                <TextView
                    android:id="@+id/textView_notification_song_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"

                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Song"


                    android:textColor="@color/black_color"
                    android:textSize="18sp">

                </TextView>

                <TextView
                    android:id="@+id/textView_notification_artist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="5dp"


                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Artist Name"
                    android:textSize="13sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.3"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageButton
                    android:id="@+id/imageView_notification_prev"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_small_player_ripple_v21"
                    android:clickable="true"
                    app:srcCompat="@drawable/notification_prev" />

                <ImageButton
                    android:id="@+id/imageView_notification_play"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/custom_small_player_ripple_v21"
                    android:clickable="true"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/notification_play" />

                <ImageView
                    android:id="@+id/imageView_notification_next"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_small_player_ripple_v21"
                    android:clickable="true"
                    app:srcCompat="@drawable/notification_next" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>